<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>查看訂位</title>
    <link rel="stylesheet" href="/view.css">
</head>
<body>
    <h1>訂位列表</h1>
    <ul>
        <% reservations.reverse().forEach(reservation => { %>
            <li>
                <p>名稱: <%= reservation.name %></p>
                <p>電話: <%= reservation.phone %></p>
                <p>日期: <%= new Date(reservation.date).toLocaleDateString('zh-TW', { timeZone: 'Asia/Taipei' }) %></p>
                <p>時間: <%= reservation.time %></p>
                <p>成人: <%= reservation.adults %></p>
                <p>小孩: <%= reservation.children || 0 %></p>
                <p>兒童椅: <%= reservation.highChair || 0 %></p>
            </li>
        <% }) %>
    </ul>
</body>
</html>
